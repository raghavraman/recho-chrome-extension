{
  "manifest_version": 2,

  "name": "Recho",
  "description": "This extension will save your favorite articles/blog posts",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab",
    "tabs",
    "storage",
     "cookies",
  "*://*.recho.com/*"
   ]  
}